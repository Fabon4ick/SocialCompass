<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/> <!-- Закругленные углы -->
            <solid android:color="#FFFFFF"/> <!-- Белый фон -->
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp"/>
        </shape>
    </item>

    <!-- Прямоугольник с тенями -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Цвет фона -->
            <corners android:radius="10dp"/> <!-- Закругленные углы -->
        </shape>
    </item>

</layer-list>
